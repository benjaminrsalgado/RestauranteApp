<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.benja.restauranteapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="RestauranteApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestauranteApp">

        <!-- Activities de tu app -->

        <activity android:name=".ui.RegistrarPlatilloActivity" android:exported="false" />
        <activity android:name=".ui.EditarPlatilloActivity" android:exported="false" />
        <activity android:name=".ui.EditarRestauranteActivity" android:exported="false" />
        <activity android:name=".ui.RegistrarRestauranteActivity" android:exported="false" />

        <!-- ✅ Esta línea era necesaria para evitar el crash -->
        <activity android:name=".ui.ItemDetailActivity" android:exported="false" />

        <activity android:name=".ui.RestaurantMenuActivity" android:exported="true" />

        <activity android:name=".ui.RestaurantListActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>